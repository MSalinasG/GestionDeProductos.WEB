@using GestionDeProductos.Web.Helpers
@using GestionDeProductos.Data.Helpers

@model IEnumerable<GestionDeProductos.Data.Models.Products>

@{
    ViewData["Title"] = "Index";    
}

<h3 class="text-center text-uppercase">List of Products</h3>

<p>
    <a asp-action="Create" class="btn btn-primary rounded-0"><i class="fas fa-plus-circle"></i> Add New</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Nombre)</th>
            <th>@Html.DisplayNameFor(m => m.Cantidad)</th>
            <th>@Html.DisplayNameFor(m => m.PrecioEntero)</th>
            <th>@Html.DisplayNameFor(m => m.FechaExpiracion)</th> 
            <th>Action(s)</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td> <a asp-action="Details" asp-route-id="@item.Id">@item.Nombre</a> </td> 
                <td>@item.Cantidad</td>
                <td>@item.PrecioEntero</td>
                <td>@item.FechaExpiracion.ToString("dd-MM-yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-edit"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>