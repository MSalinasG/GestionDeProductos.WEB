@using GestionDeProductos.Web.Helpers
@using GestionDeProductos.Data.Helpers

@model GestionDeProductos.Data.Models.Products

@{
    ViewData["Title"] = "Details";    
}

<div class="card">
    <div class="card-header">
        <h4>Product Details</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.Nombre)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.Nombre)
            </dt>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.Descripcion)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.Descripcion)
            </dt>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.EsActivo)
            </dt>
            <dt class="col-sm-10">
               @*  @Html.DisplayFor(m => m.EsActivo) *@

                @if(Model.EsActivo){
                    <label> Producto Activo </label>
                }else{
                    <label> Producto No Activo </label>
                }

            </dt>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.Cantidad)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.Cantidad)
            </dt>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.PrecioEntero)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.PrecioEntero)
            </dt>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.FechaExpiracion)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.FechaExpiracion)
            </dt>
        </dl>
    </div>
    <div class="card-footer">
        
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-edit"></i> Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger rounded-0"><i class="fas fa-trash-alt"></i> Delete</a>
         
        <a asp-action="Index" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-backward"></i> Back to List</a>
    </div>
</div>
