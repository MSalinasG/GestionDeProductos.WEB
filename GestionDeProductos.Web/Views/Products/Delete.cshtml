@model GestionDeProductos.Data.Models.Products

@{
    ViewData["Title"] = "Delete";
}

<div class="card">
    <div class="card-header">
        <h4>Delete Product</h4>
    </div>
    <div class="card-body">
        <h3 class="alert alert-danger">Are you sure you want to delete this product?</h3>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.Nombre)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.Nombre)
            </dt>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.Descripcion)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.Descripcion)
            </dt>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.EsActivo)
            </dt>
            <dt class="col-sm-10">
                @* @Html.DisplayFor(m => m.EsActivo) *@
                @if (Model.EsActivo)
                {
                    <label> Producto Activo </label>
                }
                else
                {
                    <label> Producto No Activo </label>
                }
            </dt>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.Cantidad)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.Cantidad)
            </dt>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.PrecioEntero)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.PrecioEntero)
            </dt>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.FechaExpiracion)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(m => m.FechaExpiracion)
            </dt>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-sm btn-danger rounded-0"><i class="fas fa-trash"></i> Delete</button>
            <a asp-action="Index" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-backward"></i> Back to List</a>
        </form>
    </div>
</div>
